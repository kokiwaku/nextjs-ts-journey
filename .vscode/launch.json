{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "pathMappings": {
                "/workspace": "${workspaceRoot}/back/src"
            }
        },
        {
            "name": "Next.js: debug server-side",
            "type": "node",
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "port": 9230,
            "address": "localhost",
        },
        {
            "name": "Next.js: debug client-side",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        },
    ]
}